<configuration>
	<tsv document_based="true">
        <column index="1" field="form"/>
        <column index="2" field="lemma"/>
        <column index="3" field="pos"/>
        <column index="4" field="feats"/>
        <column index="5" field="dhead"/>
        <column index="6" field="deprel"/>
        <column index="7" field="nament"/>
    </tsv>

    <lexica>
        <word_clusters field="word_form_simplified_lowercase">edu/emory/mathcs/nlp/lexica/en-brown-clusters-simplified-lowercase.xz</word_clusters>
        <stop_words field="word_form_simplified_lowercase">edu/emory/mathcs/nlp/lexica/en-stop-words-simplified-lowercase.xz</stop_words>
    </lexica>
    
    <sentiment_positive>1</sentiment_positive>
    <sentiment_negative>-1</sentiment_negative>

    <optimizer>
        <algorithm>adagrad</algorithm>
        <learning_rate>0.01</learning_rate>
        <feature_cutoff>0</feature_cutoff>
        <max_epoch>20</max_epoch>
        <bias>0</bias>
    </optimizer>

    <feature_template>
        <feature t="bag_of_words"       f0="i:word_form_simplified"/>
        <feature t="bag_of_words_norm"  f0="i:word_form_simplified"/>
        <feature t="bag_of_words_count" f0="i:word_form_simplified"/>

        <feature t="bag_of_words"       f0="i:word_form_simplified" f1="i-1:word_form_simplified"/>
        <feature t="bag_of_words_norm"  f0="i:word_form_simplified" f1="i-1:word_form_simplified"/>
        <feature t="bag_of_words_count" f0="i:word_form_simplified" f1="i-1:word_form_simplified"/>

        <feature t="bag_of_words"       f0="i:word_form_simplified" f1="i_h:word_form_simplified"/>
        <feature t="bag_of_words_norm"  f0="i:word_form_simplified" f1="i_h:word_form_simplified"/>
        <feature t="bag_of_words_count" f0="i:word_form_simplified" f1="i_h:word_form_simplified"/>

        <feature t="bag_of_words_stopwords"       f0="i:word_form_simplified"/>
        <feature t="bag_of_words_stopwords_norm"  f0="i:word_form_simplified"/>
        <feature t="bag_of_words_stopwords_count" f0="i:word_form_simplified"/>

        <feature t="bag_of_words_stopwords"       f0="i:word_form_simplified" f1="i-1:word_form_simplified"/>
        <feature t="bag_of_words_stopwords_norm"  f0="i:word_form_simplified" f1="i-1:word_form_simplified"/>
        <feature t="bag_of_words_stopwords_count" f0="i:word_form_simplified" f1="i-1:word_form_simplified"/>

        <feature t="bag_of_words_stopwords"       f0="i:word_form_simplified" f1="i_h:word_form_simplified"/>
        <feature t="bag_of_words_stopwords_norm"  f0="i:word_form_simplified" f1="i_h:word_form_simplified"/>
        <feature t="bag_of_words_stopwords_count" f0="i:word_form_simplified" f1="i_h:word_form_simplified"/>

        <feature t="bag_of_words" f0="i:part_of_speech_tag"/>
        <feature t="bag_of_words_norm" f0="i:part_of_speech_tag"/>
        <feature t="bag_of_words_count" f0="i:part_of_speech_tag"/>

        <feature t="bag_of_words_stopwords" f0="i:part_of_speech_tag"/>
        <feature t="bag_of_words_stopwords_norm" f0="i:part_of_speech_tag"/>
        <feature t="bag_of_words_stopwords_count" f0="i:part_of_speech_tag"/>

        <feature t="bag_of_clusters"/>
        <feature t="bag_of_clusters_norm"/>
        <feature t="bag_of_clusters_count"/>

        <feature t="bag_of_clusters_stopwords"/>
        <feature t="bag_of_clusters_stopwords_norm"/>
        <feature t="bag_of_clusters_stopwords_count"/>
    </feature_template>
</configuration>